{
  "expo": {
    "name": "liefer_mobile",
    "slug": "liefer_mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/logo.png",
    "scheme": "liefer_mobile",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./src/assets/images/logo-vertical.png",
      "resizeMode": "contain",
      "backgroundColor": "#1B0637"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/logo.png",
        "backgroundColor": "#1B0637"
      },
      "softwareKeyboardLayoutMode": "pan"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": ["./node_modules/@expo-google-fonts/roboto"]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
